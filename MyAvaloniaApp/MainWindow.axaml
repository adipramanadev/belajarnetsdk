<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyAvaloniaApp.MainWindow"
        Width="400" Height="200" Title="Aplikasi Hitung Luas">

    <StackPanel Margin="20">
        <TextBlock Text="Panjang:" FontSize="16"/>
        <TextBox Name="LengthInput" />

        <TextBlock Text="Lebar:" FontSize="16" Margin="0,10,0,0"/>
        <TextBox Name="WidthInput" />

        <!-- Name untuk Button agar diakses di code-behind -->
        <Button Name="CalculateButton" Content="Hitung Luas" Margin="0,20,0,0"/>

        <TextBlock Name="ResultText" FontSize="16" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
